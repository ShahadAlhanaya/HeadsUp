<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_celebrity_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="50dp">


    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="text"
        android:maxLength="16"
        android:padding="10dp"
        android:textColorHint="#c7c7c7" />

    <EditText
        android:id="@+id/edt_taboo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="Enter first taboo"
        android:inputType="text"
        android:maxLength="16"
        android:padding="10dp"
        android:textColorHint="#c7c7c7" />

    <EditText
        android:id="@+id/edt_taboo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="Enter second taboo"
        android:inputType="text"
        android:maxLength="16"
        android:padding="10dp"
        android:textColorHint="#c7c7c7" />

    <EditText
        android:id="@+id/edt_taboo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="Enter third taboo"
        android:inputType="text"
        android:maxLength="16"
        android:padding="10dp"
        android:textColorHint="#c7c7c7" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:text="Submit"
        android:textAllCaps="false" />
</LinearLayout>